<div class="page-header">
  <h1>
    Listings
  </h1>
  <h2>
    <a href="/listings/new" class="btn btn-lg btn-success"> Add a New Listing</a>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>City</th>
        <th>Address</th>
        <th>Rent dates</th>
        <th>Rent amount</th>
        <th>Details</th>
        <th>Actions</th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.city %></td>
        <td><%= listing.address %></td>
        <td><%= listing.rent_dates %></td>
        <td><%= listing.rent_amount %></td>
        <td><%= listing.details %></td>
        <td>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary">Show</a>
          <% if current_user.id == listing.user_id  %>
          <a href="/listings/<%= listing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_listing/<%= listing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
