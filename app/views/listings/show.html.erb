<div class="page-header">
  <h3>Listing #<%= @listing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @user.email %></dd>

      <dt>City</dt>
      <dd><%= @listing.city %></dd>

      <dt>Address</dt>
      <dd><%= @listing.address %></dd>

      <dt>Rent dates</dt>
      <dd><%= @listing.rent_dates %></dd>

      <dt>Rent amount</dt>
      <dd><%= @listing.rent_amount %></dd>

      <dt>Details</dt>
      <dd><%= @listing.details %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/listings" class="btn btn-primary">
        Back
      </a>
      <% if current_user.id == @listing.user_id  %>
      <a href="/listings/<%= @listing.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_listing/<%= @listing.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% end %>
    </div>
  </div>
</div>
